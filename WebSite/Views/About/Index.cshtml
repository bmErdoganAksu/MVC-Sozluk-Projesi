@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Sayfası</h2>
<title>Admin Hakkımızda Sayfası</title>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.aboutID</td>
            <td>@item.aboutDetails1 @item.aboutDetails2</td>
            <td><a href=#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href=#" class="btn btn-danger">Pasif Yap</a></td>
        </tr>
    }

</table>


@Html.Action("AboutPartial", "About")

<script src="~/Scripts/jquery-3.4.1.min.js"></script>