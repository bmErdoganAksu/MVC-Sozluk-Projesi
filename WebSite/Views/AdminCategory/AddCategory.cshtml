@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">


<br />
<title>Admin Yeni Kategori Ekleme Sayfası</title>
<h2>Yeni Kategori Ekleme Sayfası</h2>
<!--FormBaşlat FormMethodu Post olsun-->
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /><br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Status")
        @Html.DropDownListFor(x => x.CategoryStatus, (List<SelectListItem>)ViewBag.vlc, "Bir Status Seçin", new { @class = "form-control" })


        <br /><br />
        <button class="btn btn-info">Kaydet</button>
        <a href="~/AdminCategory" class="btn btn-info">Ana Sayfa</a>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
}